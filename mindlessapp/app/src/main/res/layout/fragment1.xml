<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="20dp"
    android:layout_marginStart="20dp">

    <TextView
        android:id="@+id/SubHeadingWhatBenefits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="what are the benefits?"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/TextWhatBenefits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SubHeadingWhatBenefits"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/fragment1_text"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/psychologicalBullets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TextWhatBenefits"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/fragment1_list"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/TextWhatBenefits2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/psychologicalBullets"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="@string/fragment1_text2"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/productivityBullets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TextWhatBenefits2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/fragment1_list2"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textColor="#ffffff" />
</RelativeLayout>